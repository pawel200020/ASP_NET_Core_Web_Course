@using Microsoft.CodeAnalysis.CSharp.Syntax
@model IEnumerable<ButtonGrid.Controllers.ButtonModel>


<style>
    .game-button {
        width: 80px;
        text-align: center;
        border: none;
    }

    .button-zone {
        display: flex;
        flex-wrap: wrap;
    }

    .line-break {
        flex-basis: 100%;
        height: 0;
    }

    .button-class {
        font-size: 15px;
        text-align: center;
    }

    .game-button-image {
        width: 70%
    }
</style>
@{
    string[] imgnames = { "blue.png", "green.png", "orange.png", "purple.png" };

}
<p>Current Time: @DateTime.Now</p>

<form>
    <div class="button-zone">
        @for (int i = 0; i < Model.Count(); i++)
        {
            if (i % 5 == 0)
            {
                <div class="line-break"></div>
            }
            <div class="oneButton" id=@i>
                <button class="game-button" name="ButtonNumber" value="@Model.ElementAt(i).Id" type="submit" asp-controller="Button" asp-action="handleButtonClick">
                    <img class="game-button-image" src="~/img/@imgnames[Model.ElementAt(i).State]" />
                    <div class="button-class">
                        @Model.ElementAt(i).Id , @Model.ElementAt(i).State
                    </div>
                </button>
            </div>
        }
    </div>
</form>
<div id = "messageArea">
    <p>Match all buttons in one color</p>
</div>
